# RIF Environment Configuration Template
# Copy this file to .env and customize for your environment

# Project root directory (automatically detected if not set)
PROJECT_ROOT=/Users/cal/dev/rif

# RIF home directory
RIF_HOME=${PROJECT_ROOT}/.rif

# Knowledge base directory
RIF_KNOWLEDGE_BASE=${RIF_HOME}/knowledge

# Deployment mode: project, development, or production
RIF_DEPLOYMENT_MODE=project

# Debug and logging settings
RIF_DEBUG=false
RIF_LOG_LEVEL=INFO

# Feature flags
RIF_SELF_DEVELOPMENT_CHECKS=false
RIF_AUDIT_LOGGING=false
RIF_DEVELOPMENT_TELEMETRY=false
RIF_SHADOW_MODE=false

# GitHub integration
RIF_GITHUB_INTEGRATION=true
GITHUB_TOKEN=your_github_token_here

# Claude Code integration
RIF_CLAUDE_CODE_HOOKS=true

# MCP server configuration
RIF_MCP_SERVERS=false
RIF_MCP_PORT=8080

# LightRAG backend
RIF_LIGHTRAG_BACKEND=true
RIF_LIGHTRAG_WORKING_DIR=${RIF_KNOWLEDGE_BASE}/lightrag

# Security settings
RIF_SANITIZE_PATHS=true
RIF_VALIDATE_TEMPLATES=true
RIF_RESTRICT_FILE_ACCESS=true

# Performance settings
RIF_MAX_PARALLEL_AGENTS=4
RIF_CONTEXT_TIMEOUT_SECONDS=120
RIF_GITHUB_API_TIMEOUT=30

# Quality gates
RIF_QUALITY_GATES=true
RIF_TEST_COVERAGE_THRESHOLD=80
RIF_SECURITY_SCAN=true

# Pattern learning
RIF_PATTERN_LEARNING=true
RIF_PRESERVE_PATTERNS=true
RIF_PRESERVE_DECISIONS=false
RIF_CLEAN_ON_INIT=true